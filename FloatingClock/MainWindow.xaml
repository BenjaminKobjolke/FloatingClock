<Window x:Class="FloatingClock.MainWindow"
        x:Name="FloatingClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatingClock"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="Floating Clock" Height="88" Width="220" WindowStyle="None" Background="#25000000" ResizeMode="NoResize"
        Left="1700.0" Top="950.0"
        Topmost="True" AllowsTransparency="True" ShowInTaskbar="False" Icon="Resources/Images/clock.png"
        Activated="Window_Activated"
        Deactivated="Window_Deactivated">
   <Border x:Name="FocusBorder" BorderBrush="SkyBlue" BorderThickness="0">
     <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <TextBlock x:Name="DateBlock" Foreground="#15fc11"
                 FontSize="16" TextAlignment="Center"
                 FontFamily="Serif LED Board-7"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center" Padding="0 5"/>
      <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
        <TextBlock x:Name="ClockBlock"
                   Text="10:30"
                   VerticalAlignment="Bottom"
                   Foreground="#15fc11"
                   FontSize="42"
                   FontFamily="Serif LED Board-7"/>
        <TextBlock x:Name="ClockBlockSeconds"
                   Text=":15"
                   VerticalAlignment="Bottom"
                   Foreground="#15fc11"
                   FontSize="15"
                   FontFamily="Serif LED Board-7">
          <TextBlock.RenderTransform>
            <TranslateTransform X="5" Y="-7"/>
          </TextBlock.RenderTransform>        
        </TextBlock>
                 
      </StackPanel>


    </Grid>
  </Border>
</Window>
